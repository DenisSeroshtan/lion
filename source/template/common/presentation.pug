
section.section.presentation#js-presentation
	.presentation__top
		.container
			.btn__humburger
				button(id="my-icon" class="hamburger hamburger--3dx" type="button")
					.hamburger-box
						.hamburger-inner
		nav.header__nav
			.container
				ul.nav__list
					each value, key in nav
						li.nav__items
							a(href=`#${key}`).nav__items-link= value
		.container
			h2.presentation__title-top система власти над собой
	.presentation__bottom
		+mainPattern(path.lion, 'upper', lessClass, 0)

